{% for item in menu %}
	{% if (item.get_children) %}
		<li class="dropdown {{item.classes | join(' ')}} nav-item">
            <a href="#" class="dropdown-toggle nav-link" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">{{item.title}} <span class="caret"></span></a>
            <ul class="dropdown-menu">
            	{% for subitem in item.get_children %}
	            	<li>
                  <a href="{{subitem.get_link}}" class="nav-link">
  						      <span data-letters="{{subitem.title}}">{{subitem.title}}</span>
  	            	</a>
               </li>
            	{% endfor %}
        	</ul>
		</li>
	{% else %}
		<li class="{{item.classes | join(' ')}} nav-item">
			<a href="{{item.get_link}}" class="nav-link">
				<span data-letters="{{item.title}}">{{item.title}}</span>
			</a>

			{% include "blocks/nav-primary.twig" with {'menu': item.get_children} %}
		</li>
	{% endif %}
{% endfor %}
